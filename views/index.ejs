<%- include("partials/header") %>
<div class="ui main text container">
  <div class="ui huge header">Blogging App </div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <h1>Index page</h1>
      <% blogs.forEach((blog)=>{ %>
      <div class="item">
        <div class="image"><img src="<%= blog.image  %> " alt="Unable to load image"></div>
        <div class="content">
          <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
          <div class="meta">
            <span><%= blog.created.toDateString()%></span>
          </div>
          <div class="description">
            <p><%- blog.body%></p>
          </div>
          <div class="extra">
            <a href="/blogs/<%= blog._id %>" class="ui floated blue basic button">
              Read More
              <i class="right chevron icon"></i>
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<%- include("partials/footer") %>